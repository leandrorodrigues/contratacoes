<%= form_for(@contract_item, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @contract_item.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@contract_item.errors.count, "error") %> prohibited this contract_item from being saved:</h4>

      <ul>
      <% @contract_item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    
      <%= f.label :number, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :number, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :quantity, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.number_field :quantity, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :unity_value, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :unity_value, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :total_value, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :total_value, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :modified_at, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.datetime_select :modified_at, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    
      <%= f.label :contract_item_group, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :contract_item_group, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
