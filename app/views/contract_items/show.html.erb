<div class="page-header">
  <%= link_to contract_items_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_contract_item_path(@contract_item), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show contract_item</h1>
</div>

<dl class="dl-horizontal">
  <dt>Number:</dt>
  <dd><%= @contract_item.number %></dd>

  <dt>Title:</dt>
  <dd><%= @contract_item.title %></dd>

  <dt>Description:</dt>
  <dd><%= @contract_item.description %></dd>

  <dt>Quantity:</dt>
  <dd><%= @contract_item.quantity %></dd>

  <dt>Unity value:</dt>
  <dd><%= @contract_item.unity_value %></dd>

  <dt>Total value:</dt>
  <dd><%= @contract_item.total_value %></dd>

  <dt>Modified at:</dt>
  <dd><%= @contract_item.modified_at %></dd>

  <dt>Contract item group:</dt>
  <dd><%= @contract_item.contract_item_group %></dd>

</dl>
